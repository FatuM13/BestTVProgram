@model List<Channel>
@{
    ViewData["Title"] = "Список каналов для Избранного";
}

<h4>Список каналов</h4>


    @*<div class="container">*@

    @*id="@channel.Id"*@
<form asp-action="AddManyToFavourites"
      asp-controller="Favourites" method="post">

    <div style="padding-bottom:1em">
        <button type="submit"
                class="btn btn-success">
            @*style="float:right"*@
            Добавить в Избранное
        </button>
        <button id="btnSelectAll" class="btn btn-success">
            Выбрать все
        </button>
    </div>
    @*<div class="container">*@
    <div class="row row-offcanvas row-offcanvas-right">

        <div class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="col-xs-6 col-lg-3" style="border:1px dotted green">
                    <input type="hidden" name="[@i].Id" value=@Model[i].Id />
                    <input type="hidden" name="[@i].Name" value="@Model[i].Name" />
                    <div class="row" style="text-align: center">
                        @*style="padding-left:1em"*@
                        <div class="align-content-center">
                            @* style="text-align: center" *@
                            <label class="labelcontainer">
                                <input type="checkbox" name="[@i].Checked" value="true"
                                       @if (Model[i].Checked) { @: checked
                                       } />
                                <span class="checkmark"></span>

                                <channelimage channel-id=@Model[i].Id channel-name=@Model[i].Name />
                            </label>
                        </div>
                    </div>
                    <div class="row" style="text-align: center;padding-left:1em">
                        <h4>
                            @Model[i].Name
                        </h4>
                    </div>

                </div>
            }
        </div>

    </div>
    <input type="hidden" name="returnUrl"
           value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    <span class="card-text p-1" style="padding-bottom:1em">
        @*Description @Model.Name*@
        <button type="submit"
                class="btn btn-success pull-right">
            @*style="float:right"*@
            Добавить в Избранное
        </button>
    </span>
</form>
    @*</div>*@

